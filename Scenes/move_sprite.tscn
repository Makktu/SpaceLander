script/source = "extends KinematicBody2D

var edge: int = 35
var speed: int = 5
var time: int = 30


func _ready():
	# VisualServer.set_default_clear_color(Color(0,0,0,1))
	# $AudioStreamPlayer2D.play()
	pass


func _process(delta):
	if time % 50 == 0:
		if time < 300:
			speed += 2
	if Input.is_action_pressed(\"ui_right\"):
		if position.x < get_viewport().size.x - edge:
			time += 1
			position.x += speed
		else:
			wall_collide()
	if Input.is_action_pressed(\"ui_left\"):
		if position.x > edge:
			time += 1
			position.x -= speed
		else:
			wall_collide()
	if Input.is_action_pressed(\"ui_up\"):
		if position.y > edge:
			time += 1
			position.y -= speed
		else:
			wall_collide()
	if Input.is_action_pressed(\"ui_down\"):
		if position.y < get_viewport().size.y - edge:
			time += 1
			position.y += speed
		else:
			wall_collide()
		

func wall_collide():
	$CollisionSound.play()




